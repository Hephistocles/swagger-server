{
    "swagger": "2",
    "info": {
        "version": "1.0.0",
        "title": "PetStore on Heroku"
    },
    "host": "petstore-api.herokuapp.com",
    "basePath": "/pet",
    "paths": {
        "/": {
            "get": {
                "operationId" : "getAllPets",
                "responses": {
                    "200": {
                        "description": "List all pets"
                    }
                }
            },
            "post": {
                "operationId": "createPet",
                "parameters": [
                    {
                        "name": "pet",
                        "in": "body",
                        "description": "The pet JSON you want to post",
                        "schema":  {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "birthday": {
                                    "type": "integer",
                                    "format": "int32"
                                }
                            }
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Make a new pet"
                    }
                }
            },
            "put": {
                "operationId": "updatePet",
                "parameters": [
                    {
                        "name": "pet",
                        "in": "body",
                        "description": "The pet JSON you want to post",
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "birthday": {
                                    "type": "integer",
                                    "format": "int32"
                                }
                            }
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Updates the pet"
                    }
                }
            }
        },
        "/{petId}": {
            "get": {
                "operationId": "getPetById",
                "parameters": [
                    {
                        "name": "petId",
                        "in": "path",
                        "type": "integer",
                        "description": "ID of the pet",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sends the pet with pet Id"
                    }
                }
            }
        }
    }
}